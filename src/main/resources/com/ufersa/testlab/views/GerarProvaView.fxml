<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="450.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ufersa.testlab.controller.GerarProvaController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <children>
        <Label text="Gerar Nova Prova Aleatória">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <VBox spacing="5.0">
            <children>
                <Label text="Título da Prova:" />
                <TextField fx:id="tituloTextField" promptText="Ex: Prova Final de Cálculo I" />
            </children>
        </VBox>

        <VBox spacing="5.0">
            <children>
                <Label text="Disciplina:" />
                <ComboBox fx:id="disciplinaComboBox" prefWidth="400.0" promptText="Selecione uma disciplina" />
            </children>
        </VBox>

        <Label text="Defina a quantidade de questões por dificuldade:" />
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Dificuldade 1 (Fácil):" />
                <Spinner fx:id="dificuldade1Spinner" editable="true" prefWidth="150.0" GridPane.columnIndex="1" />
                <Label text="Dificuldade 2:" GridPane.rowIndex="1" />
                <Spinner fx:id="dificuldade2Spinner" editable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Dificuldade 3 (Média):" GridPane.rowIndex="2" />
                <Spinner fx:id="dificuldade3Spinner" editable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Dificuldade 4:" GridPane.rowIndex="3" />
                <Spinner fx:id="dificuldade4Spinner" editable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Dificuldade 5 (Difícil):" GridPane.rowIndex="4" />
                <Spinner fx:id="dificuldade5Spinner" editable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Label text="Total de Questões:" />
                <Label fx:id="totalQuestoesLabel" style="-fx-font-weight: bold;" text="0" />
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button onAction="#handleCancelarAction" style="-fx-background-color: #E0E0E0;" text="Cancelar" />
                <Button onAction="#handleGerarProvaAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Gerar Prova" />
            </children>
        </HBox>
    </children>
</VBox>